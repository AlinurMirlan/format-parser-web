@{
    ViewData["Title"] = $"Upload Modules";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h2 class="mb-4">@ViewData["Title"]</h2>
            <form asp-controller="Admin" asp-action="Modules" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label for="moduleFile">Select a .dll module file:</label>
                    <input type="file" name="moduleFile" id="moduleFile" class="form-control-file" accept=".dll" required />
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </form>
            @if (TempData.ContainsKey("Success"))
            {
                <div class="text-success mt-2">@TempData["Success"]</div>
            }
        </div>
    </div>
</div>