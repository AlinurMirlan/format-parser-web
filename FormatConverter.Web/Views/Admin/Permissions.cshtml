@model PermissionsVm
@{
    ViewData["Title"] = "User Permissions";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h2 class="mb-4">Manage User Permissions</h2>
            <form asp-controller="Admin" asp-action="Permissions" method="get" class="mb-2">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-2">
                    <label asp-for="UserEmail" class="form-label"></label>
                    <input type="email" asp-for="UserEmail" class="form-control" />
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>

            @if (!string.IsNullOrEmpty(Model?.UserEmail))
            {
                <div class="mt-4">
                    <h3>Toggle Permissions</h3>
                    <form asp-controller="Admin" asp-action="PermissionsPost" method="post">
                        <input type="hidden" asp-for="UserEmail" />
                        <div class="form-group mb-2">
                            <label for="selectedPermissions" class="mb-1">Select Permissions:</label>
                            <select asp-for="ToggledPermissions" asp-items="Model.Permissions" class="form-control"></select>
                        </div>
                        <button type="submit" class="btn btn-success">Toggle Permissions</button>
                    </form>
                </div>
            }
        </div>
    </div>
</div>
