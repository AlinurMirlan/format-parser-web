@model ConverterVm
@{
    ViewData["Title"] = $"{Model.ConvertFrom} - {Model.ConvertTo} Converter";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h2 class="mb-4">@ViewData["Title"]</h2>
            <form asp-controller="Home" asp-action="Converter" method="post" enctype="multipart/form-data">
                <input asp-for="ConverterClassName" type="hidden" />
                <input asp-for="ConvertTo" type="hidden" />
                <input asp-for="ConvertFrom" type="hidden" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label for="formFile">Select a .zip file:</label>
                    <input type="file" name="formFile" id="formFile" class="form-control-file" accept=".zip" required />
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Upload and Convert</button>
                </div>
            </form>
        </div>
    </div>
</div>